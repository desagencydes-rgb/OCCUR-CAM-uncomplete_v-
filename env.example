# OCCUR-CAM Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///./storage/occur_cam.db
AUTH_DATABASE_URL=sqlite:///./storage/auth.db

# Face Recognition Settings
FACE_RECOGNITION_MODEL=buffalo_l
FACE_DETECTION_THRESHOLD=0.6
FACE_RECOGNITION_THRESHOLD=0.7
FACE_DETECTION_BATCH_SIZE=4

# Camera Configuration
DEFAULT_CAMERA_SOURCE=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
CAMERA_TIMEOUT=5

# IVCam Integration
IVCAM_ENABLED=true
IVCAM_IP=192.168.1.100
IVCAM_PORT=8080

# Authentication Settings
AUTH_TIMEOUT=30
MAX_AUTH_ATTEMPTS=3
AUTH_COOLDOWN=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/occur_cam.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# System Settings
MAX_EMPLOYEES=10000
MAX_CAMERAS=50
PROCESSING_THREADS=4

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
